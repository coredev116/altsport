  "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Recruitler",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "npx",
      "runtimeArgs": [
          "nx",
          "serve",
          "api"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/apps/api",
      "console": "integratedTerminal"
    }
  ]
}